{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AWS CloudOps Question Set Schema",
  "type": "object",
  "required": ["version", "generatedAt", "totalQuestions", "domains", "questions"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the question set"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the questions were generated"
    },
    "totalQuestions": {
      "type": "integer",
      "minimum": 1,
      "description": "Total number of questions in the set"
    },
    "domains": {
      "type": "object",
      "patternProperties": {
        "^[a-z-]+$": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false,
      "description": "Number of questions per domain"
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/question"
      }
    }
  },
  "definitions": {
    "question": {
      "type": "object",
      "required": ["id", "domain", "difficulty", "type", "question", "options", "correctAnswer", "explanation", "learningResources", "relatedServices", "tags"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^q\\d{3,}$",
          "description": "Unique question identifier (e.g., q001, q002)"
        },
        "domain": {
          "type": "string",
          "enum": ["monitoring", "reliability", "deployment", "security", "networking"],
          "description": "AWS CloudOps exam domain"
        },
        "difficulty": {
          "type": "string",
          "enum": ["easy", "medium", "hard"],
          "description": "Question difficulty level"
        },
        "type": {
          "type": "string",
          "enum": ["single", "multiple"],
          "description": "Question type: single or multiple choice"
        },
        "question": {
          "type": "string",
          "minLength": 10,
          "maxLength": 1000,
          "description": "The question text"
        },
        "options": {
          "type": "array",
          "minItems": 2,
          "maxItems": 6,
          "items": {
            "type": "string",
            "pattern": "^[A-F]\\. .+",
            "minLength": 5,
            "maxLength": 200
          },
          "description": "Answer options (A. option1, B. option2, etc.)"
        },
        "correctAnswer": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "^[A-F]$",
              "description": "Single correct answer (A, B, C, etc.)"
            },
            {
              "type": "array",
              "minItems": 2,
              "maxItems": 4,
              "items": {
                "type": "string",
                "pattern": "^[A-F]$"
              },
              "uniqueItems": true,
              "description": "Multiple correct answers for multiple choice questions"
            }
          ]
        },
        "explanation": {
          "type": "string",
          "minLength": 20,
          "maxLength": 2000,
          "description": "Detailed explanation of the correct answer"
        },
        "learningResources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/learningResource"
          },
          "description": "Related learning resources"
        },
        "relatedServices": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 2,
            "maxLength": 50
          },
          "description": "Related AWS services"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "minLength": 2,
            "maxLength": 30
          },
          "description": "Tags for categorization and search"
        }
      }
    },
    "learningResource": {
      "type": "object",
      "required": ["title", "url", "type"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 5,
          "maxLength": 100,
          "description": "Resource title"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Resource URL"
        },
        "type": {
          "type": "string",
          "enum": ["documentation", "blog", "video", "whitepaper"],
          "description": "Type of learning resource"
        },
        "description": {
          "type": "string",
          "maxLength": 200,
          "description": "Optional resource description"
        }
      }
    }
  }
}